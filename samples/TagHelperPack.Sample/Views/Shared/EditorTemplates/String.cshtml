@model string

@{
    var color = ViewData["color"];
    var fontWeight = ViewData["font-weight"];
    var fontStyle = ViewData["font-style"];
    var style = (color != null ? $"color: {color};" : "")
         + (fontWeight != null ? $"font-weight: {fontWeight};" : "")
         + (fontStyle != null ? $"font-style: {fontStyle};" : "");
}

<input class="form-control" asp-for="@__model" style="@style" />
